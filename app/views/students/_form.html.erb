<%= form_for @student, :html => { class: "form-inline", role: "form" } do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :registration_number %>
    <% if @student.id %>
    <%= @student.registration_number %>
    <% else %>
    <%= f.text_field :registration_number, :value => @registration_number %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :mobile %>
    <%= f.text_field :mobile %>
  </div>
  <div class="form-group">
    <%= f.label :school %>
    <%= f.text_field :school %>
  </div>
  
  <div class="checkbox">
    <% @subjects.each do |subject| %>
      <li><%= check_box_tag :subject_ids, subject.id, @student.subjects.include?(subject), :name => 'student[subject_ids][]' %><%= subject.name %></li>
    <% end %>

  </div>
  <div class="actions">
    <%= f.submit "Create Student", :class => "btn btn-default" %>
  </div>
<% end %>
